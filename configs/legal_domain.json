{
  "domain_config": {
    "name": "法律文档系统",
    "description": "中国法律法规文档处理配置",
    "file_type_mapping": {
      "xingfa": "刑法",
      "minfa": "民法",
      "xingsu": "刑事诉讼法",
      "minsu": "民事诉讼法",
