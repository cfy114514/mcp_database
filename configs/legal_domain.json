      }
    },
    "chapter_keywords": {
      "第一章": "总则",
      "总则": "总则",
      "分则": "分则"
    },
    "base_tags": ["法律"],
    "document_patterns": {
      "article_start": "^第.+条",
      "article_content": "条\\s*(.+?)(?=第|$)",
      "chapter_pattern": "第[一二三四五六七八九十百千]+章"
    },
    "chunking_config": {
      "min_length": 100,
      "max_length": 300,
      "preserve_structure": true,
      "structure_indicators": ["第", "条", "款", "项"]
    }
  }
