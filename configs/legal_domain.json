      "laodong": "劳动法",
      "huanping": "环评法",
      "zhishi": "知识产权法"
    },
    "default_type": "其他法律",
    "keyword_mapping": {
      "故意杀人": ["暴力犯罪", "故意杀人罪"],
      "故意伤害": ["暴力犯罪", "故意伤害罪"],
      "强奸": ["性犯罪", "强奸罪"],
