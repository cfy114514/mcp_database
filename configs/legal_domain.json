      "诈骗": ["财产犯罪", "诈骗罪"],
      "贪污": ["职务犯罪", "贪污罪"],
      "渎职": ["职务犯罪", "渎职罪"],
      "受贿": ["职务犯罪", "受贿罪"],
      "合同": ["合同法", "合同纠纷"],
      "物权": ["物权法", "财产权"],
      "侵权": ["侵权法", "侵权责任"],
      "继承": ["继承法", "继承权"],
      "婚姻": ["婚姻法", "婚姻家庭"],
      "行政许可": ["行政法", "行政许可"],
      "行政处罚": ["行政法", "行政处罚"],
      "行政复议": ["行政法", "行政复议"],
      "起诉": ["诉讼程序", "诉权"],
      "上诉": ["诉讼程序", "上诉权"],
      "管辖": ["诉讼程序", "管辖权"],
      "证据": ["诉讼程序", "证据规则"]
